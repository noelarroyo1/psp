<%= form_for [refinery, :executives_admin, @executive] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @executive,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @executive.photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :spouse -%>
    <%= f.text_field :spouse  -%>

  </div>
  
  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website  -%>

  </div>
  
  <div class='field'>
    <%= f.label :webform -%>
    <%= f.text_field :webform  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :twitter -%>
    <%= f.text_field :twitter  -%>

  </div>
  
  <div class='field'>
    <%= f.label :facebook -%>
    <%= f.text_field :facebook  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state_code -%>
    <%= f.text_field :state_code  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.executives.admin.executives.executive'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @executive.name) %>
<% end -%>
