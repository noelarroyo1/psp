<%= form_for [refinery, :justices_admin, @justice] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @justice,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @justice.photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :spouse -%>
    <%= f.text_field :spouse  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.justices.admin.justices.justice'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @justice.name) %>
<% end -%>
