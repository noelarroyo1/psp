<% content_for :page_title do %>
  <h1 class="page-header">Find Your State</h1>
<% end %>

<p class="lead">
You are invited to join us as we pray for three elected officials daily.  Use the map or select a region to find your leaders.
</p>

<div class="hidden-phone">
</div>

<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li class="active hidden-phone"><a href="#map" data-toggle="tab">Map</a></li>
    <li><a href="#northeast" data-toggle="tab">Northeast</a></li>
    <li><a href="#midwest" data-toggle="tab">Midwest</a></li>
    <li><a href="#south" data-toggle="tab">South</a></li>
    <li><a href="#west" data-toggle="tab">West</a></li>
  </ul>

  <div class="tab-content">
    <div class="hidden-phone tab-pane active" id="map">
      <%= render :partial => 'map' %>
    </div>
    <div class="tab-pane" id="northeast">
      <h2>States in the Northeast</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.northeast.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="midwest">
      <h2>States in the Midwest</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.midwest.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="south">
      <h2>States in the South</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.south.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane" id="west">
      <h2>States in the West</h2>
      <ul class="nav nav-pills nav-stacked">
        <% UsState.west.each do |state| %>
          <li><%= link_to state.name, state_path(state) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
